	public void MorningReport() throws InterruptedException, IOException{
		PerformTest test = new PerformTest();
		test.outputLog();
		test.initDriver();
		test.HPTest("http://www.forbes.com/");
//		test.HPLogin();
		test.HPCheck();
		test.HPEU();
		test.HPASIA();
		test.HPSearchbar();
		test.MarketSearch();
		test.HPAvatars();
		test.GalleryPage();




		test.runOutputUntilSuccess();
		test.quitBrowser();


	}

