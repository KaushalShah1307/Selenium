	public void hourlyTest() {
		PerformTest test = new PerformTest();
		test.outputLog();
		test.initDriverChrome();
		test.welcomeAd();
//		test.realTimeAll();
		test.homePageAll();
		test.testSummaries();
		test.runOutputUntilSuccess();
		test.quitBrowser();
	}

	public void dailyTest() {
		PerformTest test = new PerformTest();
        test.initDriver();
// 		test.initDriverChrome();
//      test.welcomeAd();
        test.listTest("http://www.forbes.com/celebrities/");
        test.channelStreamLoadMobile();
        test.runOutputUntilSuccess();
        test.quitBrowser();
	}

	public void MorningReport() throws ClientProtocolException, IOException{
		PerformTest test = new PerformTest();
		test.outputLog();
