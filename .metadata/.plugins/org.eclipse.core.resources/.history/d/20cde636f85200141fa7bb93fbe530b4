//		test.VideoPage();
		test.GalleryPage();
		test.forbesLifeLogin();
		test.forbesLifeCheck();
		test.NewslettersLogin();
		test.NewslettersCheck();
		test.RealTimeBillionaires();
		test.ChannelSectionCheck();
		test.ForbesListsCheck();
//		test.SendPageSourceHTMLDesktop();
//		test.SendPageSourceHTMLMobile();
		test.runOutputUntilSuccess();
		test.quitBrowser();


	}

